---
import type { Page } from 'astro'

export interface Props {
  page: Page
}

const { page } = Astro.props
---

{
  page.lastPage > 1 && (
    <nav class="mb-8 flex w-full grow items-end justify-center">
      <div class="flex gap-4">
        {page.url.prev ? (
          <a class="clickable" href={page.url.prev}>
            Vorher
          </a>
        ) : (
          <span class="opacity-25" aria-disabled="true">
            Vorher
          </span>
        )}
        {page.currentPage} / {page.lastPage}
        {page.url.next ? (
          <a
            class={!page.url.next ? 'no-underline opacity-25' : 'clickable'}
            href={page.url.next}>
            Nächste
          </a>
        ) : (
          <span class="opacity-25" aria-disabled="true">
            Nächste
          </span>
        )}
      </div>
    </nav>
  )
}
